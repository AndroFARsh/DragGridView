<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item app:state_editing="true" android:state_pressed="true">
        <layer-list>
            <item  android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape android:shape="rectangle" >
                    <corners android:radius="6dp"/>
                    <solid android:color="#4000"/>
                    <stroke android:width="1dp" android:color="@android:color/black"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/add" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    
    <item app:state_editing="true" android:state_pressed="false">
        <layer-list>
            <item  android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape android:shape="rectangle" >
                    <corners android:radius="6dp"/>
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="1dp" android:color="@android:color/black"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/add" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    
    
    <item android:drawable="@android:color/transparent" />

</selector>