<?xml version="1.0" encoding="utf-8"?>
<org.androfarsh.widget.DragGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cell_count="4">

    <TextView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	app:row = "1"
    	app:column = "1"
    	android:text="1"
    	android:textColor="@android:color/white"
    	android:textStyle="bold"
    	android:gravity="center"
    	android:background="@color/widget1"
        />
    
     <TextView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	app:row = "0"
    	app:column = "0"
    	android:text="2"
    	android:textColor="@android:color/white"
    	android:textStyle="bold"
    	android:gravity="center"
    	android:background="@color/widget2"
        />

      <TextView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	app:horizontal_size="2"
    	app:row = "0"
    	app:column = "1"
    	android:text="3"
    	android:textColor="@android:color/white"
    	android:textStyle="bold"
    	android:gravity="center"
    	android:background="@color/widget3" />
     
</org.androfarsh.widget.DragGridLayout>